{
  "name": "@0xpolygon/polygon-dapp-scaffold",
  "version": "0.1.0",
  "description": "CLI tool to initialise a fully-integrated Polygon DApp, create a development environment, and deploy everything to production.",
  "license": "MIT",
  "bin": {
    "create-polygon-dapp": "./bin/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "install-global": "npm i -g --force",
    "dev": "rollup --watch --watch.onEnd 'npm run install-global' -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xpolygon/polygon-dapp-scaffold.git"
  },
  "keywords": [
    "dapp toolkit",
    "web3 project template",
    "web3 project starter",
    "polygon"
  ],
  "bugs": {
    "url": "https://github.com/0xPolygon/polygon-dapp-scaffold/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "ethers": "^6.8.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/shelljs": "^0.8.14",
    "rollup": "^4.3.0",
    "typescript": "^5.2.2"
  }
}
